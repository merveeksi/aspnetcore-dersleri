@model List<Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="container mt-3">
            <main>
                @foreach(var kurs in Model)
                {
                <div class="card mb-3" id="kurs_@kurs.Id">
                    <div class="row">
                    <div class="col md-4">
                        <img src="~/img/@kurs.image" class="img-fluid rounded-start" alt="">
                    </div>
                        <div class="col md-8">
                            <div class="card-body">
                        <h5 class="card-title">@kurs.Title</h5>
                        <p class="card-text">@kurs.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </main>
        </div>
     </header>
     
    <h1>course list</h1>
</body>
</html>