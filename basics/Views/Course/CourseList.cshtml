@model List<Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="container pb-3">
            <main>
                <div class="card mb-3">
                    <div class="row">
                    <div class="col md-4">
                        <img src="" alt="">
                    </div>
                    <div class="col md-8"></div>

                    </div>
                </div>
                <h1>course index page</h1>
                <p>
                    id: @Model.Id
                </p>
                <p>
                    title: @Model.Title
                </p>
                <p>
                    descreption: @Model.Description
                </p>
            </main>
        </div>
     </header>
     
    <h1>course list</h1>
    @foreach(var kurs in Model)
    {
        <div id="kurs_@kurs.Id">
            <h2>@kurs.Title</h2>
            <p>@kurs.Description</p>
            <img src="~/img/@kurs.image" width="200" alt="">
        </div>
    }

    @Model[0]Title
</body>
</html>